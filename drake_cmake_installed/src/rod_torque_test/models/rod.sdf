<sdf version='1.6'>
  <model name='Pendulum'>

    <!-- Define base -->
    <link name='base'>
      <pose frame=''>0 0 1.015 0 -0 0</pose>
      <inertial>
        <pose frame=''>0 0 0.015 0 -0 0</pose>
        <mass>1</mass>
      </inertial>
      <visual name='base_visual'>
        <pose frame=''>0 0 0.015 0 -0 0</pose>
        <geometry>
          <sphere>
            <radius>0.015</radius>
          </sphere>
        </geometry>
      </visual>
    </link>
    <!-- <joint name='base_weld' type='fixed'>
      <child>base</child>
      <parent>world</parent>
    </joint>
 -->
    <!-- Define arm -->
    <link name='arm'>
      <pose frame=''>0 0 1.015 0 -0 0</pose>
      <inertial>
        <pose frame=''>0 0 -0.5 0 -0 0</pose>
        <mass>1</mass>
      </inertial>
      <collision name='arm_collision'>
        <pose frame=''>0 0 -0.5 0 -0 0</pose>
        <geometry>
          <cylinder>
            <length>1</length>
            <radius>0.01</radius>
          </cylinder>
        </geometry>
      </collision>
      <visual name='arm_visual'>
        <pose frame=''>0 0 -0.5 0 -0 0</pose>
        <geometry>
          <cylinder>
            <length>1</length>
            <radius>0.01</radius>
          </cylinder>
        </geometry>
      </visual>
    </link>
    <joint name='theta' type='revolute'>
      <child>arm</child>
      <parent>base</parent>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e+16</lower>
          <upper>1e+16</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>0</friction>
          <spring_reference>0</spring_reference>
          <spring_stiffness>0</spring_stiffness>
        </dynamics>
        <use_parent_model_frame>1</use_parent_model_frame>
      </axis>
    </joint>

    <!-- Define payload -->
    <link name='payload'>
      <pose frame=''>0 0 1.015 0 -0 0</pose>
      <inertial>
        <pose frame=''>0 0 -0.985 0 -0 0</pose>
        <mass>100</mass>
      </inertial>
      <visual name='payload_visual'>
        <pose frame=''>0 0 -0.985 0 -0 0</pose>
        <geometry>
          <sphere>
            <radius>0.015</radius>
          </sphere>
        </geometry>
      </visual>
    </link>
    <joint name='payload_weld' type='fixed'>
      <child>payload</child>
      <parent>arm</parent>
    </joint>
  </model>
</sdf>

